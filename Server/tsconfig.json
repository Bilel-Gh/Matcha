{
  "compilerOptions": {
    "target": "ES2020",                    // Version de JavaScript cible
    "module": "NodeNext",                  // Système de modules
    "moduleResolution": "NodeNext",        // Résolution des modules
    "baseUrl": "./src",                    // Dossier racine pour les imports
    "outDir": "./dist",                    // Dossier de sortie pour le code compilé
    "rootDir": "./src",                    // Dossier source
    "strict": true,                        // Active toutes les vérifications strictes
    "esModuleInterop": true,              // Meilleure interopérabilité des modules
    "skipLibCheck": true,                  // Accélère la compilation
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,                       // Permet l'utilisation de fichiers JavaScript
    "checkJs": true,                       // Type-check les fichiers JavaScript
    "resolveJsonModule": true,             // Permet d'importer des fichiers JSON
    "sourceMap": true,                     // Génère des source maps pour le debugging
    "paths": {                             // Configuration des alias de chemins
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],                 // Fichiers à inclure
  "exclude": ["node_modules", "dist"]      // Fichiers à exclure
}